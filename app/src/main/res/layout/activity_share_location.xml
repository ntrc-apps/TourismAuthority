<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapViewReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:mapbox_cameraTargetLat="13.2"
            mapbox:mapbox_cameraTargetLng="-61.2"
            mapbox:mapbox_cameraZoom="10">

        </com.mapbox.mapboxsdk.maps.MapView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/locTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/local_name"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/locDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/location_description"
                    android:textSize="16sp" />
            </LinearLayout>


            </LinearLayout>
</LinearLayout>