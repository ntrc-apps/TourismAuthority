<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:scaleType="fitXY"
        android:layout_marginTop="-25dp"
        app:srcCompat="@drawable/fantasea_tours" />

    <androidx.cardview.widget.CardView
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-55dp"
        android:elevation="15dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tour_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Fantasea Tours"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tour_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Hi"
            android:textColor="#000000"
            android:textSize="16sp" />


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/contactInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Contact Information"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/tour_location"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Lower Bay Street, Kingstown"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="monospace" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:background="#C61E8AE8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_access_time_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Open"
            android:textColor="#34CD3A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tour_hours"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="24 hours daily"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:background="#C61E8AE8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/ic_baseline_local_phone_24" />


        <Button
            android:id="@+id/buttonCall"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="784 457-4477"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:linksClickable="true"
            android:textColor="#000000" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="3dp"
            android:background="#C61E8AE8" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/websiteLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/globeIcon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/website" />

        <Button
            android:id="@+id/buttonWeb"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:text="fantaseatours.com"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="sans" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Reviews"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="#00BCD4"
        android:elevation="1dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Great Experience"
            android:textColor="#000000"
            android:textSize="16sp"
            android:typeface="normal" />

        <TextView
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Jessica"
            android:textColor="#1E8AE8"
            android:textSize="18sp"
            android:typeface="monospace" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_review"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="132dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Review"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>

