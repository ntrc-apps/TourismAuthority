<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:scaleType="fitXY"
        android:src="@drawable/stv" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Contact Information"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="The Ministry of Tourism is located on the 2nd Floor, NIS Building, Upper Bay Street, Kingstown, St. Vincent and The Grenadines."
        android:textColor="#0C0C0C"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/montserrat"
            android:text="Telephone No:"
            android:textColor="#070707"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/montserrat"
            android:onClick="Dial"
            android:text="(784) 457-1502"
            android:textColor="#1E8AE8"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Email:"
            android:textColor="#0B0B0B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:fontFamily="@font/montserrat"
            android:text="tourism@gov.vc"
            android:textColor="#1E8AE8"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="Postal Address:"
        android:textColor="#070707"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="Permanent Secretary \nC/o Ministry of Tourism, Sports and Culture \nP.O Box 834\nKingstown\nSt. Vincent and the Grenadines"
        android:textColor="#070707"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="Operational Hours:"
        android:textColor="#070707"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="Mondays - Fridays"
        android:textColor="#070707"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/montserrat"
        android:text="8:00 a.m. - 4:15 p.m."
        android:textColor="#070707"
        android:textSize="16sp" />



</LinearLayout>